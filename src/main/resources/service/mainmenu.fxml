<Pane fx:id="root" prefHeight="680.0" prefWidth="468.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="service.MainMenuCtrl">
   <children>
      <TabPane fx:id="tabPane" prefHeight="680.0" prefWidth="468.0" stylesheets="@tabpane.css" tabClosingPolicy="UNAVAILABLE" tabMaxWidth="150.0" tabMinWidth="150.0">
         <tabs>
            <Tab closable="false" text="Hotseat">
              <content>
                <AnchorPane fx:id="hotSeatPane" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: #fff4c2; -fx-border-color: #4a3728; -fx-border-width: 5; -fx-outer-border: #000000;">
                     <children>
                        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <AnchorPane prefHeight="215.0">
                                 <children>
                                    <TextArea editable="false" prefHeight="78.0" prefWidth="408.0" text="  &#10;  A game for two players on this computer.&#10;  The players pass the turn to each other themselves.&#10;" wrapText="true" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                                 </children>
                              </AnchorPane>
                              <Button fx:id="startHSBtn" mnemonicParsing="false" prefHeight="45.0" prefWidth="109.0" style="-fx-background-color: #cc9966; -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.75) , 4,0,0,1 );" text="Start">
                                 <font>
                                    <Font name="Comic Sans MS Bold" size="24.0" />
                                 </font></Button>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab closable="false" disable="true" text="VS Computer">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea editable="false" layoutX="10.0" layoutY="10.0" prefHeight="78.0" prefWidth="408.0" text="  &#10;  A game for one player against computer.&#10;  Not implemented yet&#10;" wrapText="true" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab closable="false" disable="true" text="Online">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</Pane>
